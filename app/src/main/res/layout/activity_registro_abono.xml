<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/cortina" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:text="Registrar Abono"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_CodigoVenta"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtVentaCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/hint_CodigoVenta"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Nombre cliente"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Saldo Actual"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName|textEmailAddress"
            android:paddingLeft="10dp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Fecha Abono"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextFechaAbono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName|textEmailAddress"
            android:paddingLeft="10dp" />



        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Valor abono"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextValorAbono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName|textEmailAddress"
            android:paddingLeft="10dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="73dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Button01"
                android:layout_width="124dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="61dp"
                android:backgroundTint="@color/clear_blue"
                android:text="Guardar"
                android:textSize="15dp"></Button>

            <Button
                android:id="@+id/Button02"
                android:layout_width="134dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="223dp"
                android:backgroundTint="@color/design_default_color_error"
                android:text="Cancelar"
                android:textSize="15dp"></Button>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>